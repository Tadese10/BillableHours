
@{
    ViewData["Title"] = "Login";
}


<div class="limiter">
    <div class="container-login100">
        <div class="login100-more" style="background-image: url('/images/bg-01.jpg');"></div>

        <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">

            @using (Html.BeginForm(actionName: "Login", controllerName: "Home",
           method: FormMethod.Post, htmlAttributes: new { @class = "login100-form validate-form" }))
            {
                <span class="login100-form-title p-b-59">
                    Login
                </span>
                <span style="color:brown; font-size:larger;margin-bottom:10px;">@ViewBag.ErrorMessage</span>

                <span style="color:darkgreen; font-size:larger;margin-bottom:10px;">@ViewBag.SucessMessage</span>

                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <span class="label-input100">Username</span>
                    <input class="input100" type="text" name="username" placeholder="Username...">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <span class="label-input100">Password</span>
                    <input class="input100" type="password" name="pass" placeholder="*************">
                    <span class="focus-input100"></span>
                </div>


                <div class="container-login100-form-btn validate-input">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <a href="/Home/Index" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                        Sign Up
                        <i class="fa fa-long-arrow-right m-l-5"></i>
                    </a>
                </div>
            }

        </div>
    </div>


</div>